<div class="row">
	<!-- loop start -->
	<div class="col-xs-12" style="margin-left: 13%">
		<div class="card card-index relative-div">
			<header class="card-heading card-dashboard border-bottom">
				<!-- project title -->
				<h2>Enkidu Dashboard</h2>
				<!-- balance amount --> 
				<h5 style="margin-top: -25px; margin-left: 52%; color: #595959; font-family: 'Lato', sans-serif;">
					AVAILABLE BALANCE: 
					<span style="font-size: 17px;">
						<b>100 ENK</b>
					</span>
				</h5>
			</header>
		<nav class="btn-fab-group apply-btn-index " style="	position:absolute; right: 10px; top: 20px;">
			<button class="btn btn-sm fab-menu btn-round resolution-btn" data-fab="down" style="width: 155px; height: 50px;">
                <p style="color:white; font-size: 14px; padding-top: 6px;">Resolutions &nbsp;
                <i class="zmdi zmdi-plus" style="padding-bottom: 3px;"></i></p>
			</button>
			<ul class="nav-sub">
				<li style="transform: translateY(10px);">
					<span data-toggle="modal" data-target="#Modal-add-collaborator">
						<button type="button" class="btn btn-sm btn-primary btn-round" data-placement="right" data-toggle="tooltip" data-target="#Modal" data-original-title="Add Collaborator" i>
							<i class="zmdi zmdi-plus"></i>
						</button>
	              	</span>
              	</li>
				<li style="transform: translateY(10px);">
					<span data-toggle="modal" data-target="#Modal-remove-collaborator">
						<button type="button" class="btn btn-sm btn-primary btn-round " data-placement="right" data-toggle="tooltip" data-target="#myModal" data-original-title="Remove Collaborator" i>
							<i class="zmdi zmdi-delete"></i>
		              	</button>
	              	</span>
              	 </li>
				<li style="transform: translateY(10px);">
					<span data-toggle="modal" data-target="#Modal-dilute">
						<button type="button" class="btn btn-sm btn-primary btn-round " data-placement="right" data-toggle="tooltip" data-target="#myModal" data-original-title="Dilute" i>
							<i class="zmdi zmdi-eyedropper"></i>
		              	</button>
	              	</span>
              	 </li>
			</ul>
         </nav>
         <div class="row">
         	<div class="col-xs-10">
         		<div class="card-body" >
                   <div class="table-responsive"> Cap Table:
                      <table class="table table-hover">
                       <thead>
                              <tr>
                              <th>User</th>
                              <th>Ownership</th>
                              </tr>
                       </thead>
                       <tbody>
                              <tr style="background-color: white;">
                                <td >sample@sample.com</td>
                                <td >35.5%</td>
                              </tr>
                              <tr style="background-color: white;">
                                <td>sample@sample.com</td>
                                <td>25.5%</td>
                              </tr>
                              <tr style="background-color: white;">
                                <td>sample@sample.com</td>
                                <td>39%</td>
                              </tr>
                              <%@project_users.each do |project_user|%>
                              <tr style="background-color: white;">
                                <td><%=project_user.email%></td>
                                <td><%=project_user.ownership_percentage%></td>
                              </tr>
                            <%end%>
                       </tbody>
                       </table>
                   </div>
                </div>
            </div>
         </div>
			<button type="button" class="btn btn-sm btn-primary btn-round " data-toggle="modal" data-target="#Modal-payment" style="margin-left: 24px; margin-bottom: 15px; height: 35px;" i>
				Add Payment Gateway
			</button>
		</div>
	</div>
</div>

<div class="modal fade" id="Modal-payment" role="dialog" style="background-color:#263238;">
	<div class="modal-dialog">
	<!-- Modal content-->
		<div class="modal-content">
		<div class="modal-header" style="background-color: #512DA8">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
			<h4 class="modal-title">Make Payment</h4>
		</div>
		<div class="modal-body">
			<%= form_for @project, class: "form-horizontal"  do |f| %>

		<div class="form-group modal-form-index">
			<p>
				<%= f.label :Payment_Rate %><br>
				<%= f.number_field :unallocated_percentage,:placeholder => "Enter payment rate" ,class: "form-control" %>
				<!-- change this to price rate -->
			</p>
		</div>
		<p>
			<button type="button" id="payment-gateway-button" class="btn btn-sm btn-primary btn-round"  i>
				Go to Gateway &nbsp;<i class="zmdi zmdi-info" id="payment-gateway-button"></i>
			</button>
		</p>

		<%end%>
		</div>
		</div>
	</div>
</div>


